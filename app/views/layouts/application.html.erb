<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title || "Basewise") %></title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="top-nav">
  <%= render "shared/top_nav" %>
</div>

<div class="flash">
  <% if flash[:notice] %>
    <%= flash[:notice] %>
  <% end %>
</div>

<div class="main-content">
  <%= yield %>
</div>


</body>
</html>
